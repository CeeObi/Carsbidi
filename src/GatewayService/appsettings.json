{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "AllowedHosts": "*",

  "IdentityServiceUrl" : "http://identity-svc",

  "ReverseProxy": {
    "Routes": {
      "auctionsRead" : {
        "ClusterId": "auctions",
        "Match": {
          "Path": "/auctions/{**catch-all}",       
          "Methods":["Get"]
        },
        "Transforms":[ 
          {
            "PathPattern": "/api/auctions/{**catch-all}"          
          }
        ]
      },
      "auctionsWrite" : {
        "ClusterId": "auctions",        
        "AuthorizationPolicy":"Default",
        "Match": {
          "Path": "/auctions/{**catch-all}",
          "Methods":["POST","PUT","DELETE"]          
        },
        "Transforms":[ 
          {
            "PathPattern": "/api/auctions/{**catch-all}"          
          }
        ]
      },
      "search" : {
        "ClusterId": "search",
        "Match": {
          "Path": "/search/{**catch-all}" ,
          "Methods": ["GET"]
        },
        "Transforms":[ 
          {
            "PathPattern": "/api/search/{**catch-all}"          
          }
        ]
      }
    },
    "Clusters": {
      "auctions": {
        "Destinations": {
          "auctionApi": {
            "Address": "http://auction-svc"
          }
        }
      },
      "search": {
        "Destinations": {
          "searchApi": {
            "Address": "http://search-svc"
          }
        }
      }
    }
  }
}
